{
  "compilerOptions": {
    "module": "CommonJs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "lib": [
      "dom",
      "es5"
    ],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "typings/*"
      ]
    },
    "typeRoots": [
      "../../node_modules/@types/mocha",
      "../../node_modules/@truffle/provider/typings"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "./typings/**/*.d.ts",
  ],
}